{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true, // https://github.com/vitejs/vite/issues/5814
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
